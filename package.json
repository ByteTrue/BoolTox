{
  "name": "booltox-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "BoolTox - Run dev tools with a single click",
  "author": "ByteTrue",
  "license": "CC-BY-NC-4.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:client": "pnpm --filter @booltox/client dev",
    "cli:dev": "pnpm --filter @booltox/cli dev",
    "cli:build": "pnpm --filter @booltox/cli build",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "release": "pnpm --filter @booltox/client tools",
    "clean": "turbo run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
