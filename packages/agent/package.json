{
  "name": "@booltox/agent",
  "version": "0.1.0",
  "description": "BoolTox 本地 Agent 服务 - 进程调度器和 API 网关",
  "type": "module",
  "main": "./dist/server.js",
  "bin": {
    "booltox-agent": "./bin/booltox-agent.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsup src/server.ts --format esm --clean",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@booltox/shared": "workspace:*",
    "@booltox/core": "workspace:*",
    "fastify": "^5.2.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/websocket": "^11.0.1",
    "@fastify/static": "^8.0.2",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "execa": "^9.5.2",
    "better-sqlite3": "^11.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/better-sqlite3": "^7.6.12",
    "tsx": "^4.19.2",
    "tsup": "^8.3.5",
    "typescript": "^5.8.0"
  },
  "keywords": [
    "booltox",
    "agent",
    "local-server",
    "plugin-manager"
  ],
  "author": "ByteTrue",
  "license": "CC-BY-NC-4.0"
}
