{
  "id": "com.booltox.backend-demo",
  "version": "2.0.0",
  "name": "系统信息监控",
  "description": "实时监控系统 CPU、内存、磁盘和进程信息，展示 Python 后端与前端通信",
  "protocol": "^2.0.0",
  "runtime": {
    "type": "http-service",
    "backend": {
      "type": "python",
      "entry": "backend/http_server.py",
      "requirements": "requirements.txt",
      "port": 8001,
      "host": "127.0.0.1"
    },
    "path": "/",
    "readyTimeout": 30000
  },
  "author": "BoolTox Team",
  "keywords": ["system", "monitor", "backend", "python", "psutil"]
}
