{
  "name": "@booltox/core",
  "version": "0.1.0",
  "description": "BoolTox 核心业务逻辑 - 插件管理、运行时、协议",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./plugin": "./dist/plugin/index.js",
    "./runtime": "./dist/runtime/index.js",
    "./storage": "./dist/storage/index.js",
    "./protocol": "./dist/protocol/index.js",
    "./utils": "./dist/utils/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@booltox/shared": "workspace:*",
    "eventemitter3": "^5.0.1",
    "zod": "^3.24.1",
    "jsonrpc-lite": "^2.2.0",
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "tsup": "^8.3.5",
    "typescript": "^5.8.0"
  },
  "keywords": [
    "booltox",
    "core",
    "plugin-manager",
    "runtime"
  ],
  "author": "ByteTrue",
  "license": "CC-BY-NC-4.0"
}
